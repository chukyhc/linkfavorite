<div class="container p-4 ">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="{{link.title}}" placeholder="Titulo" autofocus >
                    </div>
                    <div class="form-group">
                        <input type="url" class="form-control" name="url" placeholder="Url" value="{{link.url}}"> 
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="descripcion" rows="2" placeholder="Descripcion" >{{link.descripcion}}</textarea>
                    </div>
                    <div class="form-group">
                       <button class="btn btn-success btn-block" >Guardar</button>
                    </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>