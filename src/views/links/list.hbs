<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="card col-md-3 m-2">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title textuppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger"> eliminar link</a>
                    <a href="/links/edit/{{id}}" class=" btn btn-secondary">Editar</a>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="car car-body text-center">
                    <p>No tiene ningun link guardado</p>
                    <a href="/links/add" >Crea uno!</a>
                </div>
            </div>

        {{/each}}
    </div>
</div>